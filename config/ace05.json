{
    "bert_model_name": "roberta-large",
    "bert_cache_dir": "./",
    "multi_piece_strategy": "average",
    "bert_dropout": 0.5,
    "use_extra_bert": true,
    "extra_bert": -3,
  
    "use_global_features": true,
    "global_features": [],
    "global_warmup": 0,
  
    "linear_dropout": 0.4,
    "linear_bias": true,
    "entity_hidden_num": 150,
    "mention_hidden_num": 150,
    "event_hidden_num": 600,
    "relation_hidden_num": 150,
    "role_hidden_num": 600,
    "edge_type_num": 13,
    "edge_type_dim": 256,
    "gnn_layers": 2,
    "use_entity_type": true,
    "beam_size": 20,
    "beta_v": 2,
    "beta_e": 2,
    "lamda": 0.002,
    "sort_by_amr": true,
    "relation_mask_self": true,
    "relation_directional": false,
    "symmetric_relations": [],
    "use_graph_encoder": true,

    "train_file": "./data/ace05/train.oneie.json",
    "dev_file": "./data/ace05/dev.oneie.json",
    "test_file": "./data/ace05/test.oneie.json",
    "train_amr":"./data/ace05/train_graphs.pkl",
    "dev_amr":"./data/ace05/dev_graphs.pkl",
    "test_amr":"./data/ace05/test_graphs.pkl",
    "log_path": "./models/",
    "valid_pattern_path": "./resource/valid_patterns",
    "ignore_title": false,
    "ignore_first_header": false,
  
    "accumulate_step": 1,
    "batch_size": 16,
    "eval_batch_size": 16,
    "max_epoch": 100,
    "learning_rate": 4e-3,
    "bert_learning_rate": 1e-5,
    "weight_decay": 1e-3,
    "bert_weight_decay": 1e-5,
    "warmup_epoch": 5,
    "grad_clipping": 5.0,
  
    "use_gpu": true,
    "gpu_device": 0,
    "if_local": 0
  }
